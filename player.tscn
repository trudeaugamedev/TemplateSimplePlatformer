script/source = "extends CharacterBody2D


const SPEED = 300.0
const JUMP_VELOCITY = -600.0


var was_on_floor
var hp = 10
var isDead = false

@onready var _animated_sprite = $AnimatedSprite2D
@onready var health_bar = $Camera2D/Control/CanvasLayer/HealthBar
@onready var the_bad_tiles = $\"../DamageLayer\"
@onready var coyote_timer = $CoyoteTimer	


func _physics_process(delta: float) -> void:	
		
	if Input.is_action_pressed(\"ui_right\"):
		_animated_sprite.play(\"idle\")
	else:
		_animated_sprite.play(\"idle\")
		
	was_on_floor = is_on_floor()
	# Add the gravity. Manages Coyote Time
	if not is_on_floor():
		velocity += get_gravity() * delta
		
	# Handle jump.
	if Input.is_action_just_pressed(\"ui_accept\") && (is_on_floor() || !coyote_timer.is_stopped()):
		velocity.y = JUMP_VELOCITY
		coyote_timer.stop()
	
	health_bar.value = hp

	# stop all movements if character is dead
	if isDead:
			return
	
	# Get the input direction and handle the movement/deceleration.
	# As good practice, you should replace UI actions with custom gameplay actions.
	var direction := Input.get_axis(\"ui_left\", \"ui_right\")
	if direction:
		velocity.x = direction * SPEED
	else:
		velocity.x = move_toward(velocity.x, 0, SPEED)

	move_and_slide()
	
	if was_on_floor && !is_on_floor():
		coyote_timer.start()

func lose_health():
	hp -= 1
	if hp <= 0:
			die()
func gain_health():
	hp += 1
# add your custom behaviour when the character dies	
func die():
	self.rotation_degrees = 90
	isDead = true

func _on_hitbox_body_entered(body: Node2D) -> void:
	velocity.y = JUMP_VELOCITY
	lose_health()
"

